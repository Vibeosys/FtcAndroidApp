<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ftcsolutions.tradenow.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/subscriberView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSub"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/subscriber_welcome_img" />

            <TextView
                android:id="@+id/txtSubMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/str_msg_sub"
                android:textColor="@color/white_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgSubClickMore"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/sub_feedback_btn" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/nonSubscriberView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNonSub"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/non_subscriber_welcome_img" />

            <TextView
                android:id="@+id/txtNonSubMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/str_msg_non_sub"
                android:textColor="@color/white_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgClickMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/non_sub_click_more" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
